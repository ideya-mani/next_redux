{
  "compilerOptions": {
    "target": "es5", // Consider updating to "es6" or higher for modern features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "strict": true, // Enable all strict type-checking options
    "noEmit": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "noUnusedLocals": true, // Warn on unused locals
    "noUnusedParameters": true, // Warn on unused parameters
    "baseUrl": ".", // Enable baseUrl for module resolution
    "paths": {
      "@/*": ["./src/*"] // Example path alias for cleaner imports
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "pages/**/*",
    "app/**/*", // Include the app directory for Next.js 13+
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}